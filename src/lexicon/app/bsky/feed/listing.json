{
  "lexicon": 1,
  "id": "app.bsky.feed.listing",
  "defs": {
    "main": {
      "type": "record",
      "description": "A listing post, similar to a Craigslist entry.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "createdAt",
          "title",
          "description"
        ],
        "properties": {
          "createdAt": { "type": "string", "format": "datetime" },
          "title": { "type": "string", "maxLength": 300 },
          "description": { "type": "string", "maxLength": 3000 },
          "price": { "type": "string", "maxLength": 50 }, // Using string for flexibility (e.g., "$100", "Free", "OBO")
          "category": { "type": "string", "maxLength": 100 },
          "location": { "type": "string", "maxLength": 200 },
          "images": {
            "type": "array",
            "maxLength": 4,
            "items": { "type": "blob", "accept": ["image/*"] }
          }
        }
      }
    }
  }
}